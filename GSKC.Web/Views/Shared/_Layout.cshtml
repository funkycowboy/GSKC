<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    <script src="/Scripts/require.js"></script>
    <script src="/Scripts/config.js"></script>
    <script>
        $(function () {require(['common'], function (common) {common.initialize();});});                   
    </script>
</head>
<body>
    <div>
        <div style="background-color: #000;">
            <div id="LogoBG"></div>
        </div>
    </div>

    <div class="gskc-logo">
        <img src="/Images/GSKC_Trailer_Side_mist_website_logo.png" />
    </div>

    <div class="navbar navbar-inverse" role="navigation">
        <div class="container" style="padding-left:0; padding-right: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav nav-justified">
                    <li class="active"><a href="/Home/Index">HOME</a></li>
                    <li><a href="#about">SHOP</a></li>
                    <li><a href="/Support/Home/Index">SUPPORT</a></li>
                    <li class="nav-menu-spacer"><a href="#contact">.</a></li>
                    <li><a href="/Contact/Home/Index">CONTACT US</a></li>
                    <li><a href="#contact">SIGN-IN</a></li>
                    <li style="white-space: nowrap"><a href="#contact">VIEW CART</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    <div class="row">
        <div style="position:absolute;left:0;z-index: 1010" class="visible-xs">
            <button id="ProductSearchButton" type="button" class="btn btn-md glyphicon glyphicon-search pull-left"></button>
        </div>
        <div id="SearchPanel" class="col-lg-3 col-md-3 col-sm-3 sidenav" style="min-height:100%; padding-right: 0; background: #F1F1E4; height: 800px;border-right: 1px dotted #000;">

            <div class="section-header">
                <span class="SubHeaderFont" style="color:#fff; white-space:nowrap">Product Search</span>
                <div style="position:absolute; top:0;right:0; z-index: 1010">
                    <button id="SlideIndicatorButton" type="button" class="btn btn-md glyphicon glyphicon-chevron-left pull-left visible-xs"></button>
                </div>
            </div>
            @Html.Action("Index", "Home", new { Area = "ProductSearch" })
        </div>
        <div id="BodyContent" class="col-lg-6 col-md-6 col-sm-9 col-xs-12" style="padding-left: 0; padding-right: 0;">

            @RenderBody()
        </div>
        <div id="OnTheRoad" class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="padding-left: 0; padding-right: 0; min-height:100%; background: #F1F1E4; height: 1644px;border-left: 1px dotted #000">
            <div style="width: 100%; float: left; margin-top: 0;">
                <div style="border-bottom: 1px dotted #000;padding:10px 10px 10px 20px; background-color: gray;">
                    <span class="SubHeaderFont" style="color:#fff">On the Road</span>
                </div>

                <div style="padding: 10px;text-align: center"><span style="font-weight: bold;">Look for us at the following events:</span></div>
                <div style="padding-left: 20px;padding-right: 20px;">
                    @Html.Action("Index","Home", new {area = "Calendar"})
                </div>
                <div style="border-bottom: 1px dotted #000;padding:10px 10px 10px 20px; background-color: gray;" class="hidden-xs">
                    <span class="SubHeaderFont" style="color:#fff">Social Updates</span>
                </div>
                <div class="fb-like-box fb_iframe_widget hidden-xs" style="padding-left: 20px" data-href="https://www.facebook.com/GatlinAndSons" data-width="268" data-show-faces="false" data-header="true" data-stream="true" data-show-border="false" fb-xfbml-state="rendered" fb-iframe-plugin-query="app_id=448378241936683&amp;header=true&amp;href=https%3A%2F%2Fwww.facebook.com%2FGatlinAndSons&amp;locale=en_US&amp;sdk=joey&amp;show_border=false&amp;show_faces=false&amp;stream=true&amp;width=268"><span style="vertical-align: bottom; width: 100%; height: 425px;"><iframe name="f6f809218" width="100%" height="1000px" frameborder="0" allowtransparency="true" scrolling="no" title="fb:like_box Facebook Social Plugin" src="http://www.facebook.com/plugins/like_box.php?app_id=448378241936683&amp;channel=http%3A%2F%2Fstatic.ak.facebook.com%2Fconnect%2Fxd_arbiter%2FW2xi4Tmu0YA.js%3Fversion%3D41%23cb%3Df243c93044%26domain%3Dwww.gatlinandsonsknifecompany.com%26origin%3Dhttp%253A%252F%252Fwww.gatlinandsonsknifecompany.com%252Ff2cab7e04%26relation%3Dparent.parent&amp;header=true&amp;href=https%3A%2F%2Fwww.facebook.com%2FGatlinAndSons&amp;locale=en_US&amp;sdk=joey&amp;show_border=false&amp;show_faces=false&amp;stream=true&amp;width=268" style="border: none; visibility: visible; width: 100%; height: 425px;" class=""></iframe></span></div>
            </div>

        </div>
    </div>
    

    <footer class="navbar navbar-default navbar-fixed-bottom" style="display: none; ">
        <div class="container" style="text-align:center;padding:0">
            <button id="FooterSearchButton" type="button">SEARCH</button>
        </div>
    </footer>

    <div id="landscape" style="display:none"></div>
    <div id="rotateplease" style="display:none"><p><b>Rotate Device to Portrait</b></p></div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)    

</body>

</html>
